---
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.astro';
import ArticleList from '../components/ArticleList.astro';
import ArticleItem from '../components/ArticleItem.astro';
import Pagination from '../components/Pagination.astro';

let canonicalURL = Astro.request.canonicalURL;

export async function createCollection() {
  const allPosts = Astro.fetchContent('../pages/notes/*.md').sort((a, b) => new Date(b.date) - new Date(a.date));
  return {
    paginate: true,
    route: '/notes/:page?',
    async props({paginate}) {
      return {
        posts: paginate(allPosts, {pageSize: 20}),
      };
    },
    rss: ({
      title: 'Robin Rendle',
      description: 'Notes feed',
      item: (item) => ({
        title: item.title,
        description: item.astro.html,
        pubdate: item.date,
        link: '/notes' + item.url,
      }),
    }),
  };
}

const {posts} = Astro.props;
---
<!DOCTYPE html>
<html>
  <head>
    <MainHead
      title={'Notes'}
      description={'Designer and writer'}
      prev={posts.url.prev}
      next={posts.url.next}
    />
    <style lang="scss">
      footer {
        padding: 60px 20px;
        max-width: 760px;
        margin: 0 auto;
        display: flex;
        justify-content: flex-end;

        a {
          line-height: 1;
          padding: 20px;
          gap: 20px;
          margin: 0;
        }
      }
    </style>
  </head>

  <body>
    <Nav title={'Notes'}} />
    <ArticleList 
      title='Quick Notes & Ramblings'} 
    >
      {posts.data.map((post) => (
        <ArticleItem post={post} />
      ))}
    </ArticleList>
    <Pagination prev={posts.url.prev || '#'} next={posts.url.next || '#'} />
  </body>
</html>
