---
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.astro';
import ArticleList from '../components/ArticleList.astro';
import ArticleItem from '../components/ArticleItem.astro';

let canonicalURL = Astro.request.canonicalURL;

export async function createCollection() {
  const allPosts = Astro.fetchContent('../pages/notes/*.md').sort((a, b) => new Date(b.date) - new Date(a.date));
  return {
    paginate: true,
    route: '/notes/:page?',
    async props({paginate}) {
      return {
        posts: paginate(allPosts, {pageSize: 20}),
      };
    },
     rss: {
      title: 'Robin Rendle',
      description: 'Notes and articles',
      // Format each paginated item in the collection
      item: (item) => ({
        title: item.title,
        description: item.extract,
        // enforce GMT timezone (otherwise it'll be different based on where it's built)
        pubDate: item.date,
        customData: item.astro.html,
        // link is required, shows up in RSS readers
        link: '/notes/' + item.url,
      }),
    },
  }
}

const {posts} = Astro.props;
---
<!DOCTYPE html>
<html>
  <head>
    <MainHead
      title={'Notes'}
      description={'Designer and writer'}
      prev={posts.url.prev}
      next={posts.url.next}
    />
    <style lang="scss">
      footer {
        padding: 60px 20px;
        max-width: 760px;
        margin: 0 auto;
        display: flex;
        justify-content: flex-end;

        a {
          line-height: 1;
          padding: 20px;
          gap: 20px;
          margin: 0;
        }
      }
    </style>
  </head>

  <body>
    <Nav title={'Notes'}} />
    <ArticleList 
      title='Quick Notes & Ramblings'} 
    >
      {posts.data.map((post) => (
        <ArticleItem post={post} />
      ))}
    </ArticleList>
    <footer>
      <a class="prev" href={posts.url.prev || '#'}>Prev</a>
      <a class="next" href={posts.url.next || '#'}>Next</a>
    </footer>
  </body>
</html>
