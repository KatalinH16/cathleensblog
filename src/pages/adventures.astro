---
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.astro';
import ArticleList from '../components/ArticleList.astro';
import ArticleItem from '../components/ArticleItem.astro';
import Card from '../components/Card.astro';

interface MarkdownFrontmatter {
  date: number;
}

const { title = 'Adventures in Typography' } = Astro.props;
const { description = 'Designer and writer' } = Astro.props;

let essayPosts = await Astro.fetchContent('../pages/adventures/*.md');
essayPosts = essayPosts.sort((a, b) =>  new Date(b.date).valueOf() - new Date(a.date).valueOf());

---
<!DOCTYPE html>
<html lang="en">
  <head>
    <MainHead
      title={'Adventures in Typography'}
      description={description}
    />

    <style lang="scss">
      .title {
        font-size: 3em;
        letter-spacing: -0.04em;
        margin-top: 2rem;
        margin-bottom: 0;
        text-align: center;
      }
      .count {
        font-size: 1em;
        display: block;
        text-align: center;
      }
      .newsletter-card {
        margin-bottom: 40px;
      }
    </style>
  </head>

  <body>
    <Nav title={title} />
    <main class="wrapper">
      <ArticleList title="Adventures in Typography">
        <Card className="newsletter-card"><p>A now dormant newsletter about typography, graphic design, and the web that ran from 2018-2020.</p></Card>
        {essayPosts.map(p => <ArticleItem post={p} />)}        
      </ArticleList>
    </main>
  </body>
</html>
