---
export interface Props {
  post: any;
}

const { post } = Astro.props;

function formatDate(stupidIdiotDate) {
  const newFancyDate = new Date(stupidIdiotDate).toLocaleDateString(
    'en-us',
    {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
      timeZone: 'utc'
    }
  );
  return newFancyDate;
}
---

<style lang="scss">
  article {
    max-width: 100vw;
    margin: 0;
  }
  .post {
    display: block;
    margin: 0 !important;
    border-bottom: 1px solid var(--color-faded) !important;
    color: inherit;
    text-decoration: none;
    z-index: 0;
    position: relative;
    padding: 15px 0 15px;

    @media screen and (min-width: 767px) {
      padding: 20px 0 25px;
    }
    &:hover {
      --side-padding: 20px;
      padding-top: 16px;
      padding-bottom: 14px;
      padding-left: var(--side-padding);
      padding-right: var(--side-padding);
      left: calc(var(--side-padding) * -1);
      width: calc(100% + var(--side-padding) * 2);
      top: -1px;
      z-index: 1;
      border-radius: 5px;
      z-index: 999;
      background: var(--color-faded);

      @media screen and (min-width: 767px) {
        padding-top: 21px;
        padding-bottom: 24px;
      }
    }
    &:last-child {
      border-bottom: none;
    }
  }
  h2 {
    line-height: 1;
    margin-top: 0;
    margin-bottom: 5px;
    text-decoration-color: red !important;
    padding: 0;
    font-size: 1.2em;
    margin-bottom: 0;
    
    @media screen and (min-width: 767px) {
      font-size: 1.3em;
    }
  }
  time {
    color: var(--color-subtext);
    margin-bottom: 5px;
    display: block;
  }
  p {
    margin-top: 0;
    color: var(--color-subtext);
  }
  .description {
    font-size: 1.1rem;
    line-height: 1.3;
    @media screen and (min-width: 767px) {
      font-size: 1.2rem;
    }
  }
</style>

<article>
  <a class="post" href={post.url}>
    <div class="data">
      <time class="date" datetime={post.date}>{formatDate(post.date)}</time>
      <h2>
        {post.title}
      </h2>
      <p class="description">
        {post.extract}
      </p>
    </div>
  </a>
</article>
