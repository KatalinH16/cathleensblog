---
export interface Props {
  title: any;
}

const { title } = Astro.props;
---

<style lang="scss">
  .wrapper {
    padding: 0 10px;
    max-width: 700px;
    margin: 0 auto 30px auto;
  }

  h1 {
    padding-top: 10px;
    margin-bottom: 30px;
    @media screen and (min-width: 767px) {
      padding-top: 30px;
      margin-bottom: 40px;
    }
  }
</style>

<div class="wrapper">
  <h1>{title}</h1>

  <div class="list">
    <slot />
  </div>
</div>