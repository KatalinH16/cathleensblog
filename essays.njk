---
layout: layouts/base.njk
permalink: /essays/
title: Essays
---

{# eleventyNavigation:
  key: Archive
  order: 2 #}

{% set noteslist = collections.essays %}

<header class="intro-wrapper">
  <h1 class="title" id="heading">Essays</h1>
</header>

<ol reversed class="essays" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for note in collections.featured | reverse %}
  <li class="essays-item essays-item-{{loop.index}}">
    <a href="{{ note.url | url }}">
      {% if note.data.hero %}
        <img class="essays-item-img" src="{{note.data.hero}}" />
      {% endif %}
      <div class="essays-item-content">
        <h2 class="essays-item-title">{{ note.data.title }}</h2>
        <p class="extract">
          {{ note.data.extract }}
        </p>
        {# <time class="notelist-date" datetime="{{ note.date | htmlDateString }}">{{ note.date | readableDate }}</time> #}
      </div>
    </a>
  </li>
{% endfor %}
</ol>

<div class="main-content">
  <div class="cell-t40 content-list">
    <ol reversed class="article-list" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
    {% for note in collections.unfeatured | reverse %}
      <li class="article-list-item{% if note.url == url %} article-list-item{% endif %}">
        <a class="article-list-link" href="{{ note.url | url }}">
          <div class="article-list-item-title">
            {% if note.data.title %}{{ note.data.title }}{% else %}<code>{{ note.url }}</code>{% endif %}
            <div class="article-list-item-extract">{{note.data.extract}}</div>
          </div>
          <time class="notelist-date" datetime="{{ note.date | htmlDateString }}">{{ note.date | readableDate }}</time>
        </a>
      </li>
    {% endfor %}
    </ol>
  </div>
</div>