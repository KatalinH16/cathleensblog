---
permalink: feed.xml
metadata:
  title: Robin Rendle
  url: http://robinrendle.com/
  author:
    name: Robin Rendle
    email: robinjrendle@gmail.com
  feed:
    subtitle: Notes from the blog
    path: feed/feed.xml
    url: https://robinrendle.com/feed.xml
    id: https://robinrendle.com/
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ metadata.title }}</title>
  <subtitle>{{ metadata.feed.subtitle }}</subtitle>
  <link href="{{ metadata.feed.url }}" rel="self"/>
  <link href="{{ metadata.url }}"/>
  <updated>{{ collections.blogposts | rssLastUpdatedDate }}</updated>
  <id>{{ metadata.feed.id }}</id>
  <author>
    <name>{{ metadata.author.name }}</name>
    <email>{{ metadata.author.email }}</email>
  </author>
  {% for post in collections.blogposts | reverse | limit(10) %}
    {% set absolutePostUrl %}{{ post.url | url | absoluteUrl(metadata.url) }}{% endset %}
    <entry>
      <title>{{ post.data.title }}</title>
      <link href="{{ absolutePostUrl }}"/>
      <updated>{{ post.date | rssDate }}</updated>
      <id>{{ absolutePostUrl }}</id>
      <content type="html">
        {{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) }}
        {{ "<hr/><p><a href='mailto:robinjrendle@gmail.com?subject={{ metadata.title }}'>Reply via email</a></p>" | escape }}
      </content>
    </entry>
  {%- endfor %}
  {% for post in collections.essays | reverse | limit(10) %}
    {% set absolutePostUrl %}{{ post.url | url | absoluteUrl(metadata.url) }}{% endset %}
    <entry>
      <title>{{ post.data.title }}</title>
      <link href="{{ absolutePostUrl }}"/>
      <updated>{{ post.date | rssDate }}</updated>
      <id>{{ absolutePostUrl }}</id>
      <content type="html">
        {{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) }}
        {{ "<hr/><p><a href='mailto:robinjrendle@gmail.com?subject={{ metadata.title }}'>Reply via email</a></p>" | escape }}
      </content>
    </entry>
  {%- endfor %}
</feed>