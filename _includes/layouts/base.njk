    <script>
      const carousel = document.querySelector('.carousel');
      const body = document.body;

      body.addEventListener('click', function(e) {
        if(body.classList.contains('lightbox')) {
          closeDialog();
        }
      });

      carousel.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();

        const showDialog = () => {
          const scrollY = document.documentElement.style.getPropertyValue('--scroll-y');
          console.log(scrollY);
          document.body.style.top = `-${window.scrollY}px`;
          document.body.style.minHeight = `calc(100dvh + ${window.scrollY}px`;
          body.style.position = 'fixed';
          body.classList.add('lightbox');
          carousel.classList.add('carousel-expanded');
          e.srcElement.parentElement.classList.add('expand');
        };

        const closeDialog = () => {
          const scrollY = body.style.top;
          body.style.position = '';
          body.style.top = '';
          window.scrollTo(0, parseInt(scrollY || '0') * -1);

          for (const img of document.querySelectorAll('.expand')) {
            img.classList.remove('expand')
          }

          body.classList.remove('lightbox');
          carousel.classList.remove('carousel-expanded');
        };

        if(carousel.classList.contains('carousel-expanded')) {
          closeDialog();
        } else {
          showDialog();
        }
      });
    </script>
