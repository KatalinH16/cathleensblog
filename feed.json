---
---

{
  "version": "https://jsonfeed.org/version/1",
  "title": "{{site.name}}",
  "home_page_url": "https://robinrendle.com",
  "feed_url": "https://robinrendle.com/feed.json",
  "description": "{{site.description}}",
  "favicon": "https://robinrendle.com/images/favicon.png",
  "author": {
    "name": "Robin Rendle",
    "url": "https://robinrendle.com"
  },
  "items": [
    {% for post in site.posts limit:6 %}
      {
        "id": "{post.url}",
        "url": "{post.url}",
        "title": "{post.title}",
        "content_html": "{post.content | escape}",
        "date_published": "{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}",
        "author": "Robin Rendle"
      } {% if forloop.last %}{% else %},{% endif %}
    {% endfor %}
  ]
}
