---
layout: layouts/base.njk
permalink: /projects/
title: Projects
templateClass: tmpl-project
---

<header class="intro-wrapper">
  <h1 class="title" id="heading">Projects</h1>
</header>

<div class="main-content main-content-full">
  <div class="article article-wide article-projects">
    <div reversed class="content-list no-margin" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
      <div class="project-list">
        {# Can’t figure out a way to push the calendar to the right without this absolute garbage HTML, sorry Jeremy please don’t tell my mom #}
        <a class="project">
          <div class="project-date">
            <div class="project-date-content">
              XXXX
            </div>
          </div>
        </a>
        {% for note in collections.projects | reverse %}
          <a id="{{note.data.title}}" class="project" href="{{ note.url | url }}">
            <div class="project-date">
              <div class="project-date-content">
                {{note.data.dateRange}}
              </div>
            </div>
            <div class="project-content">
              <div class="project-carousel">
                {% for item in note.data.images | head(1) %}
                  <img src="/images/projects/{{item}}" />
                {% endfor %}
              </div>
              <div class="project-meta">
                <h2 class="project-title">{{ note.data.title }}</h2>
                <p class="project-extract">{{note.data.extract}}</p>
              </div>
            </div>
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

